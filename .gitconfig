[core]
    ignorecase = false
    editor = nvim
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true    # use n and N to move between diff sections
    light = false
    side-by-side = true
    line-numbers = true
[status]
    submoduleSummary = true
[alias]
    graph = log --graph
    adog = log --all --decorate --oneline --graph
    d = diff
    p = push
    a = add
    aa = add --all
    b = branch
    cm = commit -m
    s = show
    st = status
    cb = branch --show-current
[push]
    default = current
[init]
    defaultBranch = main
[rebase]
    autoStash = true
[pull]
    rebase = true
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = zebra
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[color]
    ui = true
    status = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = red
